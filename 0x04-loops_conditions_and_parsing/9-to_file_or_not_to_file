#!/usr/bin/env bash
# This script provides information about the school file

file_path="school"

if [ -e "$file_path" ]; then
    echo "school file exists"
    
    if [ -s "$file_path" ]; then
        echo "school file is not empty"

        if [ -f "$file_path" ]; then
            echo "school is a regular file"
        else
            # If the file is not a regular file (e.g., a directory or a symbolic link),
            # you can customize this part based on your specific requirements.
            echo "(nothing)"
        fi
    else
        echo "school file is empty"
    fi
else
    echo "school file does not exist"
fi

